@{
    ViewData["Title"] = "Clientes";
}
@section Estilos {
    <link href="~/lib/datatables2/css/datatables.datatables.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        /* Fuente personalizada */
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--light-shade); /* Fondo claro */
            color: var(--dark-shade); /* Texto oscuro */
        }

        /* Colores de la paleta */
        :root {
            --aztec-glimmer: #E6B347;
            --light-shade: #FFF8E1;
            --dark-shade: #8C5E21;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: var(--aztec-glimmer);
            color: white;
            border-radius: 10px 10px 0 0;
            font-weight: 600; /* Negrita */
        }

        .btn {
            border-radius: 8px;
            font-weight: 500; /* Negrita para botones */
        }

        .btn-success {
            background-color: var(--aztec-glimmer);
            border-color: var(--aztec-glimmer);
        }

            .btn-success:hover {
                background-color: #D4A238; /* Tonalidad más oscura */
                border-color: #D4A238;
            }

        .table thead th {
            background-color: var(--aztec-glimmer);
            color: white;
            border: none;
            font-weight: 600; /* Negrita para encabezados */
        }

        .table-hover tbody tr:hover {
            background-color: var(--light-shade); /* Sombra suave */
        }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background-color: var(--aztec-glimmer);
            color: white;
            border-radius: 10px 10px 0 0;
        }

        .modal-footer {
            background-color: var(--light-shade);
        }
    </style>
}
<div class="container-fluid mt-5">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <i class="fa-solid fa-user-group me-2"></i>
            <h5 class="mb-0">Lista de Clientes</h5>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-start mb-3">
                <button class="btn btn-success" id="btnNuevo">
                    <i class="fa-solid fa-plus"></i> Nuevo Cliente
                </button>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="tbData" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nro. Documento</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Fecha Creación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdData" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label for="txtNroDocumento" class="form-label">Nro. Documento:</label>
                        <input type="text" class="form-control" id="txtNroDocumento" autocomplete="off" name="Nro_Documento">
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="txtNombre" class="form-label">Nombre:</label>
                        <input type="text" class="form-control" id="txtNombre" autocomplete="off" name="Nombre">
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-12 col-md-6">
                        <label for="txtApellido" class="form-label">Apellido:</label>
                        <input type="text" class="form-control" id="txtApellido" autocomplete="off" name="Apellido">
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="txtCorreo" class="form-label">Correo:</label>
                        <input type="email" class="form-control" id="txtCorreo" autocomplete="off" name="Correo">
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-12 col-md-6">
                        <label for="txtTelefono" class="form-label">Teléfono:</label>
                        <input type="text" class="form-control" id="txtTelefono" autocomplete="off" name="Telefono">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables2/js/moment.min.js"></script>
    <script src="~/lib/datatables2/js/datatables.js"></script>
    <script src="~/views/cliente.js"></script>
}
