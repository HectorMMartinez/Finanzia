@section Estilos {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/datatables2/css/datatables.datatables.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #FFF8E1; /* Fondo claro */
            color: #8C5E21; /* Texto oscuro */
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #E6B347;
            color: white;
            font-weight: 600;
            font-size: 1.2rem;
            border-radius: 10px 10px 0 0;
        }

        .btn-success {
            background-color: #E6B347;
            border-color: #E6B347;
        }

            .btn-success:hover {
                background-color: #D4A238;
            }

        .table-hover tbody tr:hover {
            background-color: #FAF3E3;
        }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background-color: #E6B347;
            color: white;
            border-radius: 10px 10px 0 0;
        }

        .modal-footer {
            background-color: #FAF3E3;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <i class="fa-solid fa-dollar-sign me-2"></i>
            Lista de Monedas
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-start mb-3">
                <button class="btn btn-success" id="btnNuevo">
                    <i class="fa-solid fa-plus"></i> Nueva Moneda
                </button>
            </div>
            <div class="table-responsive">
                <table id="tbData" class="table table-hover table-bordered text-center align-middle" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Símbolo</th>
                            <th>Fecha de Creación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdData" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Moneda</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Nombre:</label>
                    <input type="text" class="form-control" id="txtNombre" autocomplete="off" name="Nombre">
                </div>
                <div class="mb-3">
                    <label for="txtSimbolo" class="form-label">Símbolo:</label>
                    <input type="text" class="form-control" id="txtSimbolo" autocomplete="off" name="Simbolo">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables2/js/moment.min.js"></script>
    <script src="~/lib/datatables2/js/datatables.js"></script>
    <script src="~/views/moneda.js"></script>
}
